<%= form_for post, url: (post.new_record? ? posts_path : admin_post_path(post)) do |f| %>
  <div class="row">
    <div class="input-field col s12 m5 offset-m1">
      <%= f.select(:category_list, options_for_select(@categories, post.categories), prompt: 'Select a category') %>
      <%= f.label :category_list %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12 m10 offset-m1">
      <%= f.text_area :content, class: "materialize-textarea", required: true %>
      <%= f.label :content %>
    </div>
    <div class="row">
      <div class="col s12 m10 offset-m1">
        <%= f.submit class: "btn" %>
      </div>
    </div>
  </div>
<% end %>
